@model DoAnBanHang.Models.TaiKhoan
@using DoAnBanHang.Models;
@{
    /**/

    ViewBag.Title = "ThongTinKhach";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var diem = ViewBag.Diem;
    TaiKhoan tk = Session["TaiKhoan"] as TaiKhoan;
}

@using (Html.BeginForm("CapNhatThongTin", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row text-center" style="width:100%;text-align:center">
        <b>Cập nhật thông tin Khách Hàng</b>
    </div>
    <hr />
    @Html.HiddenFor(model => model.ID_TK);
    <div class="row">
        <div class="col-sm-8">
            <div class="row">
                <div class="col-sm-6"><b>Họ tên:</b></div>
                <div class="col-sm-6">@Html.TextBoxFor(model => model.Ten)</div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="row">
                <div class="col-sm-6"><b>Số điện thoại:</b></div>
                <div class="col-sm-6">@Html.DisplayFor(model => model.SDT)</div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8">
            <div class="row">
                <div class="col-sm-6"><b>Địa chỉ:</b></div>
                <div class="col-sm-6">@Html.DisplayFor(model => model.DiaChi)</div>
            </div>
        </div>

        <div class="col-sm-4">
            <div class="row">
                <div class="col-sm-6"><b>Điểm thưởng:</b></div>
                <div class="col-sm-6">@diem.Diem</div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <button type="submit" class="btn-purchase">Cập nhật thông tin</button>
            @*<button type="submit"> <a class="btn-purchase" href="@Url.Action("ThongTinKhach","Account",new { id = tk.ID_TK })">Cập nhật thông tin</a> </button>*@
        </div>
        </div>
        }
